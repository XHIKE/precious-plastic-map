{
    "extends": [ "eslint:recommended", "google" ],
    "env" : { 
        "es6" : true,
        "browser": true
    },
    "globals": {
        "google": false,
        "MarkerClusterer": false
    },
    "rules": {
        "require-jsdoc" : "off",
        "max-len" : "off",
        "object-curly-spacing" : [ "error", "always" ],
        "semi" : [ "error", "never" ],
        "brace-style" : [ "error", "1tbs", { "allowSingleLine" : true } ]
    },
    "parser": "babel-eslint",
    "plugins": []
}
